@model Trainning__Management.Models.login

<h1>Login</h1>
<div class="col-lg-8 rounded border p-3">
    <form asp-action="Login" asp-controller="Login" method="post">
        <div class="form-group">
            <label asp-for="email">Username</label>
            <input type="text" class="form-control" asp-for="email" placeholder="Enter useremail">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="pass">Password</label>
            <input type="password" class="form-control" asp-for="pass" placeholder="Enter password">
            <span asp-validation-for="pass" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        <div class="m-2">

            <label>Don't have account?  </label>
            <br />
            <a asp-area="" asp-controller="IRegister" asp-action="IRegister">  Register As Instructor</a>
            <br />
            <a asp-area="" asp-controller="TRegister" asp-action="TRegister"> Register As Trainee</a>


        </div>
        <a asp-action="Index" asp-controller="Home" class=" btn btn-primary"><i class="bi bi-plus-square"></i>Back to Home</a>

    </form>
</div>
