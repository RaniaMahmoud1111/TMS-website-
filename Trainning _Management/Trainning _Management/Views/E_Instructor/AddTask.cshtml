@model Trainning__Management.Models.Tasks

@{
    ViewData["Title"] = "Add Task";
}

<h2>Add Task</h2>

<form asp-action="AddTask" method="post" enctype="multipart/form-data">
    <input type="hidden" name="trainingId" value="@ViewData["TrainingId"]" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeadLine" class="control-label"></label>
        <input asp-for="DeadLine" class="form-control" />
        <span asp-validation-for="DeadLine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Trainings" class="btn btn-secondary">Back to List</a>
</div>
