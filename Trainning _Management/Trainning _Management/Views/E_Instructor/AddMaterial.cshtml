@model Trainning__Management.Models.Materials

@{
    ViewData["Title"] = "Add Material";
}

<h2>Add Material</h2>

<form asp-action="AddMaterial" method="post" enctype="multipart/form-data">
    <input type="hidden" name="trainingId" value="@ViewData["TrainingId"]" />
    <div class="form-group">
        <label asp-for="MaterialName" class="control-label"></label>
        <input asp-for="MaterialName" class="form-control" />
        <span asp-validation-for="MaterialName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="file_path" class="control-label"></label>
        <input asp-for="file_path" class="form-control" type="file" name="file_path" />
        <span asp-validation-for="file_path" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Trainings" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
