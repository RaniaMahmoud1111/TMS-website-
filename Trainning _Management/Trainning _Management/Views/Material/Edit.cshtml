@model Trainning__Management.Models.Materials

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Materials</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaterialName" class="control-label"></label>
                <input asp-for="MaterialName" class="form-control" />
                <span asp-validation-for="MaterialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="file_path" class="control-label"></label>
                <input asp-for="file_path" class="form-control"  type="file" />
                <span asp-validation-for="file_path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tr_id" class="control-label"></label>
                <select asp-for="tr_id" class="form-control" asp-items="ViewBag.tr_id"></select>
                <span asp-validation-for="tr_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary"><i class="bi bi-plus-square"></i>Back to List</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
